extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First name:
      input#first-name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===user ? '' : user.first_name) )
      label(for='last_name') Last name:
      input#last-name.form-control(type='text' placeholder='Last name' name='last_name' required='true' value=(undefined===user ? '' : user.last_name) )
      label(for='username') Username:
      input#email.form-control(type='email' placeholder='Use a valid email address' name='username' required='true' value=(undefined===user ? '' : user.email) )
      label(for='password') Password:
      input#password.form-control(type='password' placeholder='Enter a password' name='password' required='true' minlength="8" maxlength="100" value='')
    div.form-group
      label(for='conf_password') Confirm password:
      input#conf-password.form-control(type='password' placeholder='Confirm password' name='conf_password' required='true' minlength="8" maxlength="100" value='' )
      span.error-message

    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg

  script(type='text/javascript', src='/javascripts/checkPassword.js')